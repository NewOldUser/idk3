local Http = game:GetService("HttpService")
local TPS = game:GetService("TeleportService")
local Player = game.Players.LocalPlayer
local placeId = 109983668079237

local function getServers(cursor)
    local url = "https://games.roblox.com/v1/games/"..placeId.."/servers/Public?sortOrder=Asc&limit=100"
    if cursor then
        url = url .. "&cursor=" .. cursor
    end
    local success, response = pcall(function()
        return game:HttpGet(url)
    end)
    if success then
        return Http:JSONDecode(response)
    else
        warn("Error al obtener servidores.")
        return nil
    end
end

local function hopToServer()
    local cursor = nil
    local tried = {}

    repeat
        local servers = getServers(cursor)
        if not servers then return end

        for _, server in pairs(servers.data) do
            if server.playing > 2 and server.playing < 8 and server.id ~= game.JobId then
                if not tried[server.id] then
                    tried[server.id] = true
                    print("Saltando al servidor con "..server.playing.." jugadores...")
                    TPS:TeleportToPlaceInstance(placeId, server.id, Player)
                    return
                end
            end
        end

        cursor = servers.nextPageCursor
        wait(1)
    until not cursor
end

while true do
    wait(2) -- espera 2 segundos antes de saltar
    pcall(hopToServer)
end

